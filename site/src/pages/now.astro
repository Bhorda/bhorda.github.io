---
import Header from '../components/Header.astro';
const sections = [
	{ name: 'General', id: 'education' },
	{ name: 'Now', id: 'education' },
  	{ name: 'Education', id: 'education' },
  	{ name: 'Work', id: 'professional-experience' },
  	{ name: 'Skills', id: 'skills' },
  	{ name: 'Interests', id: 'interests' }
];
---


<!DOCTYPE html>
<html lang="en">
  <body>
	<div class="site-container"> 
		<Header />
		<div class="app-container">
			<div class="container">
				<section class="ribbon-menu" aria-label="Navigation">
					<ul class="menu-items">
					  <li class="menu-item"><a class="nav-link" href="/about">About</a></li>
					  <li class="menu-item selected"><a class="nav-link" href="/now">Now</a></li>
					  <li class="menu-item"><a class="nav-link" href="/education">Education</a></li>
					  <li class="menu-item"><a class="nav-link" href="/experience">Experience</a></li>
					</ul>
				</section>
		</div>
	</div>
  </body>
</html>

<style>
	html {
		background: #3b3b3b;
		/* come back to this idea later */
		background: linear-gradient(0deg, #3b3b3b 0%, #3b3b3b 50%, #1f1f1f 50%, #1f1f1f 100%);
	}

	html, body {
		margin: 0;
		padding: 0;
		height: 100%;
		color: #FFF;
	}

	body {
		color: #FFF;
		font-family: 'Outfit', sans-serif;
		font-weight: 200;
	}

	p {
		font-weight: 200;
	}

	p strong, p b {
  		font-weight: 500;
	}

	a {
		font-weight: 500;
		text-decoration: none;
		color: #FFF;
	}

	.site-container {
		min-height: 100%; /* Allows the container to grow with content */
		width: 100vw;
		background-color: #1F1F1F;
		display: flex;
		flex-direction: column;
		justify-content: center; /* Centers tile-grid horizontally */
		align-items: center; /* Centers tile-grid vertically */
	}

	.app-container {
		display: flex;
		flex-grow: 1;
	}

	.ribbon-menu {
    border-bottom: 1px solid #d2d2d7;
    padding: 10px 20px;
    background-color: #ffffff;
  }

  .menu-items {
    list-style: none;
    display: flex;
    gap: 20px;
    margin: 0;
    padding: 0;
  }

  .menu-item {
    margin: 0;
  }

  .nav-link {
    text-decoration: none;
    color: #1d1d1f;
    font-weight: 500;
    padding: 10px 0;
    display: block;
    transition: color 0.3s, border-bottom 0.3s;
  }

  .nav-link:hover {
    color: #0071e3;
  }

  .menu-item.selected .nav-link {
    color: #0071e3;
    border-bottom: 2px solid #0071e3;
  }
</style>