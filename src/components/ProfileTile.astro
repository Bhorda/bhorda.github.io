<style>
	.profile-tile {
		position: relative;
		width: 315px; /* Adjust width as needed */
		height: 315px; /* Adjust height as needed */
		background-color: var(--layer-2);
		box-shadow: 0px 4px 8px var(--layer-2-shadow);
		border-radius: 16px;
		overflow: hidden; /* Ensure content doesn't overflow */
		display: flex;
		justify-content: start;
		align-items: center;
		transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transition for both size and shadow */
		backface-visibility: hidden; /* Prevent flickering and layout shifts */
		will-change: transform, box-shadow; /* Tell the browser to optimize for these changes */
	}

	.profile-tile:hover {
		transform: scale(1.018); /* Slightly grow the tile */
		box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.25);
	}

	.profile-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 0.15; /* Adjust the opacity for subtle background */
	}

	.profile-logo {
		width: 80%; /* Adjust size of SVG as needed */
		height: auto;
	}

	.profile-content {
		position: relative;
		z-index: 1; /* Ensure content is on top of the SVG */
		text-align: left;
		color: var(--text-primary);
		padding: 20px;
		display: flex;
		flex-direction: column;
		align-items: start;
		gap: 12px;
	}

	.profile-pic {
		width: 80px;
		height: 80px;
		border-radius: 50%;
		object-fit: cover;
	}

	.profile-content h1 {
		margin: 0;
		font-family: Outfit;
		font-size: 24px;
		font-style: normal;
		font-weight: 200;
		line-height: normal;
		letter-spacing: 0.36px;
	}

	.profile-content h1 strong {
		font-weight: 500;
	}

	.profile-content p {
		font-size: 15px;
		margin: 0px;
		color: var(--text-secondary);
		font-weight: 200px;
		letter-spacing: 0.32px;
	}

	.social-links {
		display: flex;
		gap: 16px;
	}

	.social-links a {
		font-size: 20px;
		fill: var(--text-primary);
		text-decoration: none;
	}

	.social-links a:hover {
		fill: var(--text-tertiary);
	}

	@media (max-width: 1035px) {
		.profile-tile {
			width: 660px;
		}
	}

	@media (max-width: 690px) {
		.profile-tile {
			max-width: 660px;
			margin-left: 16px;
			margin-right: 16px;
		}
	}
</style>
