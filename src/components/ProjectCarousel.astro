---
// Astro component script area, if needed
import { Image } from 'astro:assets';
import TabsIcon from '../assets/tabslogo.svg';
import SocialInnovator from '../assets/thesocialinnovator.png';
import NBSLogo from '../assets/nbslogo.svg';
---
<div class="tile-small">
<div class="carousel-container">
    <div class="carousel-track">
      <!-- Project 1 -->
      <div class="carousel-slide">
        <div class="project-card" style="background-color: #6382F1">
        	<div style="display: flex; flex-direction: column; width: 100%; justify-content: top; align-items: center; margin-top: 0px;">
	        	<div style="display: flex; flex-direction: row; width: 100%; justify-content: leading; align-items: center; margin: 0px; gap: 8px;">
		        	<Image src={TabsIcon} alt="Tabs Icon" width="50" height="50"/>
		          <h2>Tabs</h2>
          	</div>
           	<p>A less overwhelming todo app. Designed for people with ADHD, perfected for everyone.</p>
          </div>
          <div style="display: flex; flex-direction: row; width: 100%; justify-content: space-between; align-items: center; margin-bottom: 10px;">
          	<Image src={NBSLogo} alt="No Blank Space" width="30" height="30" style="margin-top: 0px" />
           	<a href="https://noblank.space/work/tabs" class="download-link">Learn more</a>
          </div>
        </div>
      </div>

      <!-- Project 2 -->
      <div class="carousel-slide">
        <div class="project-card">
          <h2>User Therapy</h2>
          <p style="font-size: 16px;">
          	Tech is having a culture/purpose identity-crisis. User Therapy is a lounge-style casual podcast on refinding that tech-career axis and realigning it with purpose and culture.
          </p>
          <a href="" class="download-link" style="margin-bottom: 10px;">Coming soon</a>
        </div>
      </div>

      <!-- Project 3 -->
      <div class="carousel-slide">
        <div class="project-card" style="padding: 0px; height: 295px;">
        	<div style="width: 100%; height: 100%; background-image: url(/images/thesocialinnovator.png); background-size: cover;     background-color: rgba(0,0,0,0.6);
         background-blend-mode: darken;">
        		<div style="display: flex; flex-direction: column; flex-grow: 1; height: 100%; width: 100%; justify-content: top; margin-top: 0px;">
         			<div>
           			<h3 style="margin-bottom: 0px; margin-top: 20px;margin-left: 12px; text-align: left;">Newsletter</h3>
              	<h2 style="margin-bottom: 20px; margin-top: 0px;margin-left: 12px; text-align: left;">The Social Innovator</h2>
              </div>
              <div style="text-align: left; width: 50%; margin-bottom: 10px;">
		            <p style="font-size: 14px; margin-bottom: 0px; margin-top: 0px;">
		           		What is the mark of a truly remarkable entrepreneur? How do we bring wonder and optimism into our future? What social innovations will help us get there?
		            </p>
		            <a href="https://vcseb.substack.com" class="download-link" style="margin-left: 12px; margin-top: 8px;">Read</a>
							</div>
          	</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Carousel navigation dots -->
    <div class="carousel-dots">
      <button class="dot active"></button>
      <button class="dot"></button>
      <button class="dot"></button>
    </div>
  </div>
</div>

<style>
	/* Carousel container styling */
	.carousel-container {
	  position: relative;
	  width: 295px; /* Adjust to fit your design */
	  height: 295px;
	  overflow: hidden;
	  border-radius: 10px;
	  background-color: #1f1f1f; /* Dark background for contrast */
	}

	/* Track for sliding content */
	.carousel-track {
	  display: flex;
	  transition: transform 0.5s ease-in-out;
	}

	/* Individual slides */
	.carousel-slide {
	  min-width: 100%;
	  min-height: 100%;
	  box-sizing: border-box;
	  display: flex;
	  flex-direction: column;
	  justify-content: center; /* Center vertically */
	  align-items: center; /* Center horizontally */
	  text-align: center; /* Center text */
	  height: 100%;
	  flex-grow: 1;
	}

	/* Project card styling */
	.project-card {
	  color: white;
	  /* border-radius: 20px; */
	  padding: 20px;
	  display: flex;
	  flex-direction: column;
	  justify-content: space-between; /* Center vertically */
	  align-items: center; /* Center horizontally */
	  text-align: center; /* Center text */
	  height: 255px;
	}

	/* Heading styling */
	.project-card h2 {
	  margin: 0;
	  font-size: 24px;
	}

	/* Paragraph styling */
	.project-card p {
		font-size: 20px;
		text-align: left;
		width: 100%;
		font-weight: 200;
		margin-left: 12px;
		margin-top: 8px;
	}

	/* Image styling */

	/* Download link styling */
	.download-link {
	  display: inline-flex;
	  align-items: center;
	  color: white;
	  text-decoration: none;
	  font-weight: bold;
	}

	/* Carousel navigation dots */
	.carousel-dots {
	  position: absolute;
	  bottom: 10px;
	  left: 50%;
	  transform: translateX(-50%);
	  display: flex;
	  gap: 8px; /* Increase spacing between dots */
	}

	.dot {
	  width: 12px;
	  height: 12px;
	  border-radius: 100%;
	  background-color: var(--layer-3); /* Neutral color for inactive dots */
	  border: none;
	  cursor: pointer;
	  transition: background-color 0.3s ease;
	}

	.dot.active {
	  background-color: var(--text-secondary); /* Neutral color for inactive dots */
	}
</style>

<script>
  let currentIndex = 0;
  const slides = document.querySelectorAll('.carousel-slide');
  const dots = document.querySelectorAll('.dot');

  function showSlide(index) {
    const track = document.querySelector('.carousel-track');
    const slideWidth = slides[0].offsetWidth;
    track.style.transform = `translateX(-${index * slideWidth}px)`;

    // Update active dot
    dots.forEach(dot => dot.classList.remove('active'));
    dots[index].classList.add('active');
  }

  function nextSlide() {
    currentIndex = (currentIndex + 1) % slides.length;
    showSlide(currentIndex);
  }

  // Automatically switch slides every 6 seconds
  setInterval(nextSlide, 6000);

  // Allow manual control with dots
  dots.forEach((dot, idx) => {
    dot.addEventListener('click', () => {
      currentIndex = idx;
      showSlide(currentIndex);
    });
  });
</script>
