---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

type Props = CollectionEntry<'notes'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;
const allPosts = await getCollection('notes');
const posts = allPosts
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))

import Header from '../components/Header.astro';
import { Image } from 'astro:assets';
const { slug } = Astro.params;

import "../styles/theme.css";
import "../styles/posts.css";
---


<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="theme-color" content="#3B3B3B"> <!-- This should match the top of the gradient -->
		<title>Benjamin Lucas Searle</title>
		<script src="https://unpkg.com/@phosphor-icons/web"></script>
	  </head>
  <body>
	<div class="site-container">
		<Header />
		<div class="app-container">
            <div class="sidebar">
				<div class="posts-container">
					<a href={`/notes`} >
						<p style="padding-left: 12px; font-weight: 500; font-size: 20px;"> Notes </p>
					</a>
					{posts.map(post => (
						<a href={`/${post.slug}`} class={`post-item ${post.slug === slug ? 'active' : ''}`}  key={post.slug}>
							<div class="post-text-block">
								<div class="post-title">{post.data.title}</div>
								<div class="post-subtitle">{post.data.description}</div>
							</div>
						</a>
					  ))}
				</div>
            </div>
            <div class="post-content-container">
				<div class="post-content-toolbar">
				<div class="post-content-nav">
					<a href="/notes">
						<svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 0 256 256"><path d="M165.66,202.34a8,8,0,0,1-11.32,11.32l-80-80a8,8,0,0,1,0-11.32l80-80a8,8,0,0,1,11.32,11.32L91.31,128Z"></svg>
						<p>Notes</p>
					</a>
					</div>
					<p class="date"><i>Last updated: {new Date(pubDate).toLocaleDateString()}</i></p>
					<div class="substack-button">
						<a href="https://benjibo.substack.com">
							<p>Read on Substack</p>
							<svg xmlns="http://www.w3.org/2000/svg" height="14" viewBox="0 0 448 511.471"><path d="M0 0h448v62.804H0V0zm0 229.083h448v282.388L223.954 385.808 0 511.471V229.083zm0-114.542h448v62.804H0v-62.804z"></path></svg>
						</a>
					</div>
				</div>
				<div class="post-content">
					<h1>{title}</h1>
					<slot />
					<div style="width: 100%; margin-top: 40px; margin-bottom: 80px; border: 1px solid var(--layer-3-trim); background: var(--layer-3); border-radius: 20px; align-items: center;">
						<p style="padding-left: 12px; padding-right: 12px; color: #FFF; text-align: center">I don't write on a schedule, but if you want to be notified when something new does appear there's a signup below!</p>
						<div style=" text-align: end;">
						<!-- <div id="custom-substack-embed"></div> -->
							<div style="display: block; width: 100%; align-items: end;">
								<iframe src="https://benjibo.substack.com/embed" height="140" style="border-radius: 20px; width: 100%; display: flex; text-align: center;" frameborder="0" scrolling="no"></iframe>
							</div>
					  </div>
					</div>
				</div>
      </div>
		</div>
	</div>
  </body>
</html>

<style>
	/* html {
		background: #3b3b3b;
		background: linear-gradient(0deg, #3b3b3b 0%, #3b3b3b 50%, #1f1f1f 50%, #1f1f1f 100%);
	}

	html, body {
		margin: 0;
		padding: 0;
		height: 100%;
		color: #FFF;
	}

	body {
		color: #FFF;
		font-family: 'Outfit', sans-serif;
		font-weight: 200;
	}

	p {
		font-weight: 200;
	}

	p strong, p b {
  		font-weight: 500;
