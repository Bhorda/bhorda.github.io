	a {
		font-weight: 500;
		text-decoration: none;
		color: #FFF;
	}

	.site-container {
		min-height: 100%; /* Allows the container to grow with content */
		width: 100vw;
		background-color: var(--layer-1);
		display: flex;
		flex-direction: column;
		justify-content: center; /* Centers tile-grid horizontally */
		align-items: center; /* Centers tile-grid vertically */
	}

	.app-container {
		display: flex;
		flex-direction: row;
		flex-grow: 1;
		width: 100vw;
		height: calc(100vh - 40px); /* Adjust height to account for the header */
		border-top: 1px solid var(--layer-3-trim);
	}

    .sidebar {
        display: flex;
        flex-direction: column;
        width: 300px;
		flex-shrink: 0; /* Prevent the sidebar from shrinking */
        border-right: 1px solid var(--layer-3-trim);
		overflow-y: auto;
		max-height: 100%;
    }

	.posts-container {
  /* background-color: #3B3B3B; */
    padding: 8px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
	gap: 0px;
}

.post-content-container {
	padding: 12px 24px;
    display: flex;
    flex-direction: column;
    align-items: start;
	gap: 4px;
	flex-grow:1;
	overflow-y: auto; /* Make post content scrollable */
    max-height: 100%; /* Ensure it doesnâ€™t exceed the height of its container */
}

.post-content-nav {
	display: none;
}

.post-content-nav p {
	padding: 0px;
	margin: 0px;
}

.post-content-nav a {
		fill: var(--text-primary);
		padding: 12px 16px;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		gap: 8px;
		font-size: 14px;
	}

	.date {
		color: var(--text-tertiary);
	}

.post-content-toolbar {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	align-content: center;
}
.substack-button {
	display: flex;
	flex-direction: row;
	font-size: 16px;
}
.substack-button p {
	padding: 0px;
	margin: 0px;
}
	.substack-button a {
		fill: var(--text-secondary);
		padding: 12px 16px;
		border-radius: 100px;
		background: var(--layer-2);
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		gap: 8px;
		font-size: 14px;
	}

	.substack-button a:hover {
		fill: #FF681A;
		background: var(--layer-3);
	}

.post-content {
	max-width: 800px;
	padding-left: 24px;
	padding-left: 24px;
	line-height: 1.6rem;
	letter-spacing: 0.32px;
}

.post-text-block {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 4px;
    flex: 1 0 0;
}

.post-item {
    display: flex;
    padding: 10px 12px;
    align-items: flex-start;
    gap: 8px;
    align-self: stretch;
    border-radius: 10px;
    text-decoration: none;
    border: 1px solid #00000000;
}

.post-item.active {
    background-color: var(--notes-accent-secondary); /* Same as hover */
	border: 1px solid var(--notes-accent);
    /* You can add more styles like border, font-weight, etc. */
}
.post-item.active:hover {
    background-color: var(--notes-accent-tertiary); /* Same as hover */
	border: 1px solid var(--notes-accent);
	box-shadow: 0px 1px 8px 0px var(--layer-3-shadow);
}

.post-item:hover {
  background-color: var(--layer-3);
  border: 1px solid var(--layer-3-trim);
  box-shadow: 0px 1px 8px 0px var(--layer-3-shadow);
}

.post-title {
    text-decoration: none;
    color: var(--text-primary);
    font-size: 16px;
    font-weight: 500;
}

.post-subtitle {
    text-decoration: none;
    font-size: 14px;
    font-weight: 200;
    color: var(--text-secondary);
}

@media (max-width: 1000px) {
    .app-container {
        flex-direction: column;
    }

    .sidebar {
        display: none;
    }

    .post-content-container {
   	display: flex;
   	flex-direction: column;
   	align-items: center;
    	align-content: center;
    	padding: 0px;
    }

    .post-content-toolbar {
        padding-top: 8px;
    }
    .substack-button {
        padding-right: 8px;
    }

    .post-content {
    	max-width: 800px;
    	padding-top: 0px;
      padding-left: 24px;
      padding-right: 24px;
    }

    .post-content-nav {
        display: flex;
       	flex-direction: row;
        font-size: 16px;
    }
}

@media (max-width: 700px) {
	.substack-button {
		display: none;
	}

	.post-content-nav a{
		padding: 0px;
		margin: 0px;
	}

	.date {
		margin-right: 8px;
	}

	.post-content {
  	padding-left: 8px;
    padding-right: 8px;
	}
}
</style>
