<style>
	a {
		font-weight: 500;
		text-decoration: none;
		color: var(--text-primary);
	}
	a:hover {
		color: var(--text-secondary);
	}

	.site-container {
		min-height: 100%;
		width: 100vw;
		background-color: var(--layer-1);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.app-container {
		display: flex;
		flex-direction: row;
		flex-grow: 1;
		width: 100vw;
		height: calc(100vh - 40px);
		border-top: 1px solid var(--layer-2-trim);
	}



.works {
    display: inline-flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 4px;
	padding-top: 8px;
    padding-bottom: 16px;
    width: 100%;
}

.work {
    display: flex;
    width: 100%;
    padding: 0px;
    justify-content: center;
    align-items: center;
    gap: 6px;
    line-height: 0px;
    height: 1.675rem;
}

.work p {
    padding: 0px;
}

.role {
    font-weight: 200;
    text-decoration: none;
    line-height: 1.6rem;
}

.work hr {
    flex-grow: 1;
    border: 0;
    height: 1px;
    background-color: var(--layer-2);
    margin: 0 20px;
}

.tabs {
  width: 100%;
  max-width: 1000px;
  margin: 0 auto;
  margin-top: 24px;
  padding-left: 8px;
  padding-right: 8px;
}

.tab-container {
  position: relative;
  min-height: 300px;
}

.tab-container input[type="radio"] {
  display: none;
}

.tab-container label {
	position: relative;
  display: inline-block;
  padding: 10px 4px;
  margin-right: 20px;
  cursor: pointer;
  font-weight: 200;
  z-index: 2;
  color: var(--text-secondary);
}

.tab-content {
  display: none;
  position: absolute;
  top: 40px;
  left: 0;
  right: 0;
  padding: 4px;
  border-top: 1px solid var(--layer-2-trim);
}

.narrow-tab-box {
	display: flex;
	flex-direction: row;
	flex-grow: 1;
	margin: 0 auto;
}
.narrow-tab-content {
	display: flex;
	flex-direction: column;
	flex-grow: 1;
	max-width: 600px;
	margin: 0 auto;
	gap: 0px;
	padding: 0px;
}

.narrow-tab-spacer {
	display: flex;
	flex-grow: 1;
}

.tab-container input[type="radio"]:checked + label + .tab-content {
  display: block;
}

.tab-container input[type="radio"]:checked + label {
  border-bottom: 1px solid var(--text-secondary);
  z-index: 3;
  color: var(--text-primary);
}
</style>
